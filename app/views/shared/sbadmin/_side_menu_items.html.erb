<!-- Usuários logados podem ver os vídeos -->
<% if ["member", "uploader", "admin"].include? current_user.try(:role) %>
<li>
	<a href="/videos">
		<i class="fa fa-fw fa-video-camera"></i> Vídeos
	</a>
</li>
<% end %>
<!-- ======================= -->
<% if ["uploader", "admin"].include? current_user.try(:role) %>
<li>
	<a href="/videos/new">
		<i class="fa fa-fw fa-upload"></i> Enviar vídeo
	</a>
</li>
<% end %>
<!-- ======================= -->

<!-- Uploaders e admins podem criar grupos -->
<% if ["uploader", "admin"].include? current_user.try(:role) %>
<li>
	<a href="/groups">
		<i class="fa fa-fw fa-upload"></i> Gerenciar grupos
	</a>
</li>
<% end %>
<!-- Logout é comum para todos -->
<li>
    <a data-method="delete" href="<%= destroy_user_session_path %>"><i class="fa fa-fw fa-power-off"></i> Logout</a>
</li>
